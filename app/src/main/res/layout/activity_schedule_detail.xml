<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/inputAlarmTitleDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="제목" />
    <EditText
        android:id="@+id/inputAlarmLocationDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="장소" />

    <EditText
        android:id="@+id/inputAlarmContentDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="메모" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="2">
        <TimePicker
            android:id="@+id/startTimePickerDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:timePickerMode="spinner"
            android:layout_weight="1"/>
        <TimePicker
            android:id="@+id/finishTimePickerDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:timePickerMode="spinner"
            android:layout_weight="1"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/cancleButtonDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="취소" />
        <Button
            android:id="@+id/confirmButtonDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="저장" />
    </LinearLayout>


</LinearLayout>